<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_crown"
        android:layout_margin="16dp"
        android:id="@+id/img_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/txt_change"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/txt_total"
        android:textColor="@color/color_blue"
        android:layout_below="@id/txt_change"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:textColor="@color/color_2"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img_type"
        android:layout_toStartOf="@+id/txt_change"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/txt_transaction_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:textSize="14sp"
        android:textColor="@color/color_3_3"
        android:layout_toEndOf="@id/img_type"
        android:layout_toStartOf="@+id/txt_total"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/txt_transaction_time"
        android:layout_below="@id/txt_transaction_type"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"
        android:layout_below="@id/txt_transaction_time"/>
</RelativeLayout>